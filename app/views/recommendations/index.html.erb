<div class="row">
  <div class="col-md-3">
    <div class="ls">
      <%= link_to "新着順", recommendations_newarrival_path, class: "btn btn-default" %>
      <%= link_to "並び替え", recommendations_path, class: "btn btn-default" %>
    </div>
  </div>
  <div class="col-md-9">
    <div class="content">
      <% @recommendations.shuffle.each do |recommendation| %>
        <div class="eachbox">
          <div class="bookuser">
            <div>
              <%= link_to recommendation.user.username, user_path(recommendation.user) %>
            </div>
          </div>
          
          <div class="index-box">
            <div class="index-image">
              <div class="index-wrap">
                <% image_url =  recommendation.rakuten_data['largeImageUrl'].gsub('?_ex=200x200', '') %>
                <%= image_tag(image_url, alt: recommendation.rakuten_data['title']) %>
              </div>
            </div>
            <div class="booktitle">
              <%= recommendation.book.title %>
            </div>
            <div class="want">
              <%= render 'users/favorite_form', book: recommendation.book %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @recommendations %>
  </div>
</div>