<h2 class="new">ログイン</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     
      <div class="form-group">
        <%= f.label :email, class: "controll-label" %>
        <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "メールアドレス" %>
      </div>
      
      <div class="form-group">
        <%= f.label :パスワード, class: "controll-label" %>
        <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "パスワード" %>
      </div>
      
      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>
      
      <div class="form-group">
        <%= f.submit "ログイン", class: "btn btn-large" %>
      </div>
        
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>