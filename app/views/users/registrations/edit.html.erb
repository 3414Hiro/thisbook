
<h2 class="new">プロフィールを編集</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="form-group">
        <%= f.label :名前, class: "control-label" %>
        <%= f.text_field :username, class: "form-control", autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :email, class: "control-label" %>
        <%= f.email_field :email, class: "form-control", autofocus: true %>
      </div>
      
      <div class="form-group">
       <%= f.label :アイコン画像, class: "control-label"  %><br>
       <%= f.file_field :avatar %>
      </div>
      
      <div class="form-group">
        <%= f.label :"自己紹介", class: "control-label" %>
        <%= f.text_area :bio, :size => "20x5", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :"変更にはパスワードが必要です", class: "control-label" %>
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-large" %>
      </div>
      <%= link_to "パスワードを変更する", edit_user_password_path(current_user) %>
    <% end %>
  </div>
</div>


